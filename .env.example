# AIConexus Development Environment Configuration

# Application Settings
DEBUG=True
ENVIRONMENT=development
APP_NAME=AIConexus
APP_VERSION=0.1.0

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=True

# Database
DATABASE_URL=postgresql://aiconexus:aiconexus@localhost:5432/aiconexus
DATABASE_ECHO=False
DATABASE_POOL_SIZE=20

# Redis
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Security
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24

# API
API_PREFIX=/api/v1
CORS_ORIGINS=["*"]

# Registry
REGISTRY_HEARTBEAT_INTERVAL_MS=30000
REGISTRY_HEARTBEAT_TIMEOUT_MS=60000

# Execution
EXECUTION_TIMEOUT_MS=5000
EXECUTION_MAX_RETRIES=3

# Economics
CURRENCY_DEFAULT=AIC
TRANSACTION_SETTLEMENT_INTERVAL_SECONDS=60

# Monitoring
METRICS_ENABLED=True
TRACING_ENABLED=False
