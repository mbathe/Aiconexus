# AIConexus Gateway Environment Configuration
# Copy this file to .env.gateway and adjust values as needed

# Logging
LOG_LEVEL=INFO

# Python buffering (set to 1 to see real-time logs)
PYTHONUNBUFFERED=1

# Gateway configuration
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000
GATEWAY_SUBPROTOCOL=ioap.v1

# Agent timeout (seconds before removing inactive agents)
AGENT_TIMEOUT=300

# Cleanup interval (seconds between registry cleanups)
CLEANUP_INTERVAL=60

# Connection limits
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=30

# Performance tuning
WORKER_THREADS=4
BUFFER_SIZE=65536

# Security
VERIFY_SIGNATURES=true
VALIDATE_DIDS=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Storage (future: Redis/Database backend)
STORAGE_TYPE=memory
# REDIS_URL=redis://localhost:6379
# DATABASE_URL=postgresql://user:pass@localhost/aiconexus

# Deployment
ENVIRONMENT=development
# ENVIRONMENT=production

# CORS configuration (if needed for web clients)
ALLOW_ORIGINS=*
ALLOW_CREDENTIALS=true
ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOW_HEADERS=*
